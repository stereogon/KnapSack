                </div>
                <div>
                    <div class="blog-post-head">
                        <div class="categories-container-two">
                            <a href="/classes">
                                <div class="category">
                                    <p><img class="icon-image" src="/assets/caret-left-solid.svg" alt=""></p>
                                </div>
                            </a>
                            <% if (user.role === "professor" || user.role=== "admin") { %>
                            <a href="/classes/<%= data.id %>/edit">
                                <div class="category">
                                    <p><img class="icon-image" src="/assets/pen-to-square-solid.svg" alt=""></p>
                                </div>
                            </a>
                            <a href="/classes/<%=data.id %>/delete">
                                <div class="category delete">
                                    <p><img class="icon-image" src="/assets/trash-arrow-up-solid.svg" alt=""></p>
                                </div>
                            </a>
                            <% } %>
                            <a href="/classes/<%= data.id %>/discussions">
                                <div class="category">
                                    <p><img class="icon-image" src="/assets/message-solid.svg" alt=""></p>
                                </div>
                            </a>
                        </div>
                        <h1 class="hero-heading"><%= data.module %></h1>
                        <div class="underheading">
                            <div class="card-profile-two">
                                <h3>by</h3>
                                <div class="card-profile-info">
                                    <h3 class="profile-name-two"><a href="{% url 'about' %}">Prof. <%= data.by.firstName%> <%= data.by.lastName%></a></h3>
                                </div>
                            </div>
                            <p class="post-timesince">Posted <%= data.timeago %></p>
                        </div>
                    </div>
                    <div>
                        <div class="content-centerer">
                            <div class="content">
                                <% if (lectures) { %> 
                                    <ul>
                                        <% lectures.forEach(lecture => { %>
                                            <li><a href="/classes/<%= data.id %>/<%= lecture._id %>"><%=lecture.lectureNo%>. <%=lecture.name%></a></li>
                                        <% }) %>
                                    </ul>
                                <% } %> 
                                <% if (user.role === "professor" || user.role === "admin") { %>
                                <div class="categories-container-two">
                                    <a href="/classes/<%=data.id%>/addlecture">
                                        <div class="category">
                                            <p><img class="icon-image" src="/assets/circle-plus-solid.svg" alt=""></p>
                                        </div>
                                    </a>
                            </div>
                            <% } %>
                        </div>
                    </div>
