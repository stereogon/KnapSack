<div class="wrapper">
    <% if (noclass === false) { %>
    <% classes.forEach(cls => { %>
    <a href="/classes/<%= cls.id %>">
        <div class="card">
            <div class="card-banner">
                <img class="banner-img" src="/<%= cls.image %>" alt="Banner Image">
            </div>
            <div class="card-body">
